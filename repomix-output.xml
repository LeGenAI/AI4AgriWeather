export const safeParseDate = (dateString: string | Date): Date | null => {
  if (dateString instanceof Date) return dateString;
  if (typeof dateString === 'string') {
    const date = new Date(dateString);
    return isNaN(date.getTime()) ? null : date;
  }
  return null;
};

