                      <div className="p-2 bg-gray-50 rounded border text-sm">
                        {formData.region?.replace('_', ' ').toUpperCase() || 'Not specified'}
                      </div>
                    )}
                  </div>

                  <div className="space-y-2">
                    <Label htmlFor="farming_type">Farming Type</Label>
                    {editing ? (
