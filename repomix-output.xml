export const getCrops = async (farmId: string): Promise<Crop[]> => {
  try {
    const crops = await safeApiCall(async () =>
      supabase
        .from('crops')
        .select('*')
        .eq('farm_id', farmId)
        .order('created_at', { ascending: false })
