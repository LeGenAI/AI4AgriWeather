  value: string;
  label: string;
  description: string;
}> => {
  const options = [
    { value: 'private', label: 'Private', description: 'Only you can see this entry' }
  ];
  
  if (!userRole) return options;
  
  if (hasPermission(userRole, 'knowledge_entries', 'share')) {
    options.push({
