  FileValidationResult,
  UploadCancellation,
  ProcessingStatus,
} from './types';

// ÌååÏùº ÌÉÄÏûÖÎ≥Ñ ÏÑ§Ï†ï
const FILE_TYPE_CONFIGS = {
  pdf: {
    maxSize: 50 * 1024 * 1024, // 50MB
    allowedTypes: ['application/pdf'],
    extensions: ['.pdf'],
  },
  audio: {
    maxSize: 100 * 1024 * 1024, // 100MB
    allowedTypes: [
      'audio/mpeg',
      'audio/mp3', 
      'audio/wav',
      'audio/x-wav',
      'audio/mp4',
      'audio/m4a',
      'audio/ogg',
      'audio/webm'
    ],
    extensions: ['.mp3', '.wav', '.m4a', '.mp4', '.ogg', '.webm'],
  },
} as const;

// ÌôúÏÑ± ÏóÖÎ°úÎìú Ï∂îÏ†ÅÏùÑ ÏúÑÌïú Îßµ
const activeUploads = new Map<string, AbortController>();

/**
 * ÌååÏùº Í≤ÄÏ¶ù
 */
export const validateSourceFile = (
  file: File, 
  sourceType: SourceType
): FileValidationResult => {
  const errors: string[] = [];
  const warnings: string[] = [];

  const fileInfo = {
    name: file.name,
    size: file.size,
    type: file.type,
    extension: file.name.substring(file.name.lastIndexOf('.')).toLowerCase(),
  };

  // ÌååÏùº ÌÅ¨Í∏∞Í∞Ä 0Ïù∏ÏßÄ ÌôïÏù∏
  if (file.size === 0) {
    errors.push('ÌååÏùºÏù¥ ÎπÑÏñ¥ÏûàÏäµÎãàÎã§.');
  }

  // ÌååÏùºÎ™Ö Í∏∏Ïù¥ ÌôïÏù∏
  if (file.name.length > 255) {
    errors.push('ÌååÏùºÎ™ÖÏù¥ ÎÑàÎ¨¥ ÍπÅÎãàÎã§. (ÏµúÎåÄ 255Ïûê)');
  }

  // ÌÉÄÏûÖÎ≥Ñ Í≤ÄÏ¶ù
  if (sourceType === 'pdf' || sourceType === 'audio') {
    const config = FILE_TYPE_CONFIGS[sourceType];
    
    try {
      validateFile(file, {
        maxSize: config.maxSize,
        allowedTypes: config.allowedTypes,
      });
    } catch (error: any) {
      errors.push(error.message);
    }
    
    // ÌôïÏû•Ïûê Ï∂îÍ∞Ä Í≤ÄÏ¶ù
    if (!config.extensions.includes(fileInfo.extension)) {
      errors.push(`ÏßÄÏõêÎêòÏßÄ ÏïäÎäî ÌååÏùº ÌòïÏãùÏûÖÎãàÎã§. ÏßÄÏõê ÌòïÏãù: ${config.extensions.join(', ')}`);
    }
  }

  // Ïö©ÎüâÏù¥ ÌÅ∞ ÌååÏùºÏóê ÎåÄÌïú Í≤ΩÍ≥†
  if (file.size > 20 * 1024 * 1024) { // 20MB Ïù¥ÏÉÅ
    warnings.push('ÌååÏùº ÌÅ¨Í∏∞Í∞Ä ÌÅΩÎãàÎã§. ÏóÖÎ°úÎìúÏôÄ Ï≤òÎ¶¨Ïóê ÏãúÍ∞ÑÏù¥ Ïò§Îûò Í±∏Î¶¥ Ïàò ÏûàÏäµÎãàÎã§.');
  }

  return {
    isValid: errors.length === 0,
    errors,
    warnings,
    fileInfo,
  };
};

/**
 * ÌååÏùº ÏóÖÎ°úÎìúÏôÄ ÏÜåÏä§ ÏÉùÏÑ±
 */
export const uploadSourceFile = async (options: FileUploadOptions): Promise<Source> => {
  const {
    notebookId,
    file,
    title,
    metadata = {},
    onProgress,
    onStatusChange,
    signal,
  } = options;

  // ÌååÏùº ÌÉÄÏûÖ Í≤∞Ï†ï
  const sourceType: SourceType = getSourceTypeFromFile(file);
  
  // ÌååÏùº Í≤ÄÏ¶ù
  const validation = validateSourceFile(file, sourceType);
  if (!validation.isValid) {
    throw new Error(`ÌååÏùº Í≤ÄÏ¶ù Ïã§Ìå®: ${validation.errors.join(', ')}`);
  }

  // AbortController ÏÑ§Ï†ï
  const abortController = signal ? signal : new AbortController();
  const sourceId = generateTempSourceId();
  
  if (!signal) {
    activeUploads.set(sourceId, abortController);
  }

  try {
    // 1. Î®ºÏ†Ä ÏÜåÏä§ ÏÉùÏÑ± (ÌååÏùº Í≤ΩÎ°ú ÏóÜÏù¥)
    const source = await createSource({
      notebookId,
      title: title || file.name,
      type: sourceType,
      processingStatus: 'pending',
      metadata: {
        ...metadata,
        originalFileName: file.name,
        fileSize: file.size,
        fileType: file.type,
        uploadStartTime: new Date().toISOString(),
      },
    });

    const actualSourceId = source.id;

    // ÌôúÏÑ± ÏóÖÎ°úÎìú Îßµ ÏóÖÎç∞Ïù¥Ìä∏
    if (!signal) {
      activeUploads.delete(sourceId);
      activeUploads.set(actualSourceId, abortController);
    }

    // ÏßÑÌñâÎ•† Ï¥àÍ∏∞Ìôî
    const initialProgress: FileUploadProgress = {
      sourceId: actualSourceId,
      fileName: file.name,
      progress: 0,
      status: 'uploading',
      uploadStartTime: new Date(),
    };

    onProgress?.(initialProgress);
    onStatusChange?.('processing');

    // 2. ÌååÏùº ÏóÖÎ°úÎìú
    const filePath = generateUniqueFilePath(notebookId, file.name);
    
    // ÏóÖÎ°úÎìú ÏßÑÌñâÎ•† ÏãúÎÆ¨Î†àÏù¥ÏÖò (Ïã§Ï†ú Íµ¨ÌòÑÏóêÏÑúÎäî XHRÏùò progress Ïù¥Î≤§Ìä∏ ÏÇ¨Ïö©)
    let progress = 0;
    const progressInterval = setInterval(() => {
      if (abortController.signal.aborted) {
        clearInterval(progressInterval);
        return;
      }
      
      progress += Math.random() * 15;
      if (progress > 85) progress = 85; // 85%ÍπåÏßÄÎßå ÏãúÎÆ¨Î†àÏù¥ÏÖò
      
      onProgress?.({
        ...initialProgress,
        progress: Math.min(progress, 85),
      });
    }, 100);

    const uploadResult = await uploadFile({
      bucket: 'sources',
      path: filePath,
      file: file,
      upsert: false,
    });

    clearInterval(progressInterval);

    // ÏóÖÎ°úÎìú Ï∑®ÏÜå ÌôïÏù∏
    if (abortController.signal.aborted) {
      throw new Error('ÏóÖÎ°úÎìúÍ∞Ä Ï∑®ÏÜåÎêòÏóàÏäµÎãàÎã§.');
    }

    // ÏßÑÌñâÎ•† 100% ÏóÖÎç∞Ïù¥Ìä∏
    onProgress?.({
      ...initialProgress,
      progress: 100,
      status: 'completed',
    });

    // 3. ÏÜåÏä§Ïóê ÌååÏùº Ï†ïÎ≥¥ ÏóÖÎç∞Ïù¥Ìä∏
    const updatedSource = await updateSource(actualSourceId, {
      filePath: uploadResult.path,
      fileSize: file.size,
      processingStatus: 'completed',
    });

    onStatusChange?.('completed');

    // ÌôúÏÑ± ÏóÖÎ°úÎìúÏóêÏÑú Ï†úÍ±∞
    if (!signal) {
      activeUploads.delete(actualSourceId);
    }

    return updatedSource;

  } catch (error: any) {
    // ÏóêÎü¨ Ïãú ÏßÑÌñâÎ•† ÏóÖÎç∞Ïù¥Ìä∏
    onProgress?.({
      sourceId: sourceId,
      fileName: file.name,
      progress: 0,
      status: 'failed',
      error: error.message,
      uploadStartTime: new Date(),
    });

    onStatusChange?.('failed');

    // ÌôúÏÑ± ÏóÖÎ°úÎìúÏóêÏÑú Ï†úÍ±∞
    if (!signal) {
      activeUploads.delete(sourceId);
    }

    throw error;
  }
};

/**
 * Îã§Ï§ë ÌååÏùº ÏóÖÎ°úÎìú
 */
export const handleMultipleFiles = async (
  notebookId: string,
  files: File[],
  options: {
    onProgress?: (sourceId: string, progress: FileUploadProgress) => void;
    onFileComplete?: (source: Source) => void;
    onFileError?: (fileName: string, error: string) => void;
  } = {}
): Promise<MultipleFileUploadResult> => {
  const { onProgress, onFileComplete, onFileError } = options;
  
  const result: MultipleFileUploadResult = {
    successful: [],
    failed: [],
    total: files.length,
  };

  // Î≥ëÎ†¨ Ï≤òÎ¶¨ Ï†úÌïú (ÎèôÏãúÏóê 3Í∞ú ÌååÏùºÎßå ÏóÖÎ°úÎìú)
  const concurrency = 3;
  const chunks = [];
  
  for (let i = 0; i < files.length; i += concurrency) {
    chunks.push(files.slice(i, i + concurrency));
  }

  for (const chunk of chunks) {
    const promises = chunk.map(async (file) => {
      try {
        const source = await uploadSourceFile({
          notebookId,
          file,
          onProgress: (progress) => onProgress?.(progress.sourceId, progress),
          onStatusChange: () => {}, // Í∞úÎ≥Ñ ÌååÏùº ÏÉÅÌÉúÎäî onProgressÎ°ú Ï≤òÎ¶¨
        });
        
        result.successful.push(source);
        onFileComplete?.(source);
      } catch (error: any) {
        const errorMessage = error.message || 'Ïïå Ïàò ÏóÜÎäî Ïò§Î•òÍ∞Ä Î∞úÏÉùÌñàÏäµÎãàÎã§.';
        result.failed.push({
          fileName: file.name,
          error: errorMessage,
        });
        onFileError?.(file.name, errorMessage);
      }
    });

    // Ï≤≠ÌÅ¨ ÎÇ¥Ïùò Î™®Îì† ÌååÏùº ÏóÖÎ°úÎìú ÏôÑÎ£å ÎåÄÍ∏∞
    await Promise.allSettled(promises);
  }

  return result;
};

/**
 * ÏóÖÎ°úÎìú ÏßÑÌñâÎ•† Ï∂îÏ†Å
 */
export const getUploadProgress = (sourceId: string): FileUploadProgress | null => {
  // Ïã§Ï†ú Íµ¨ÌòÑÏóêÏÑúÎäî ÏÉÅÌÉú Í¥ÄÎ¶¨ÎÇò Ï∫êÏãúÏóêÏÑú Ï°∞Ìöå
  // ÌòÑÏû¨Îäî Îã®ÏàúÌïú ÏòàÏãú
  return null;
};

/**
 * ÏóÖÎ°úÎìú Ï∑®ÏÜå
 */
export const cancelUpload = (sourceId: string): boolean => {
  const controller = activeUploads.get(sourceId);
  if (controller) {
    controller.abort();
    activeUploads.delete(sourceId);
    return true;
  }
  return false;
};

/**
 * Î™®Îì† ÌôúÏÑ± ÏóÖÎ°úÎìú Ï∑®ÏÜå
 */
export const cancelAllUploads = (): void => {
  activeUploads.forEach((controller) => {
    controller.abort();
  });
  activeUploads.clear();
};

/**
 * ÌôúÏÑ± ÏóÖÎ°úÎìú Î™©Î°ù Ï°∞Ìöå
 */
export const getActiveUploads = (): string[] => {
  return Array.from(activeUploads.keys());
};

/**
 * ÏóÖÎ°úÎìú Ï∑®ÏÜå Ìï∏Îì§Îü¨ ÏÉùÏÑ±
 */
export const createUploadCancellation = (sourceId: string): UploadCancellation => {
  let isCancelled = false;
  
  return {
    sourceId,
    cancel: () => {
      if (!isCancelled) {
        cancelUpload(sourceId);
        isCancelled = true;
      }
    },
    isCancelled: () => isCancelled,
  };
};

// Ìó¨Ìçº Ìï®ÏàòÎì§

/**
 * ÌååÏùºÎ°úÎ∂ÄÌÑ∞ ÏÜåÏä§ ÌÉÄÏûÖ Í≤∞Ï†ï
 */
const getSourceTypeFromFile = (file: File): SourceType => {
  const extension = file.name.substring(file.name.lastIndexOf('.')).toLowerCase();
  
  if (extension === '.pdf') {
    return 'pdf';
  }
  
  if (FILE_TYPE_CONFIGS.audio.extensions.includes(extension)) {
    return 'audio';
  }
  
  // Í∏∞Î≥∏Í∞íÏùÄ ÌÖçÏä§Ìä∏Î°ú Ï≤òÎ¶¨
  return 'text';
};

/**
 * ÏûÑÏãú ÏÜåÏä§ ID ÏÉùÏÑ± (Ïã§Ï†ú ÏÜåÏä§ ÏÉùÏÑ± Ï†Ñ Ï∂îÏ†ÅÏö©)
 */
const generateTempSourceId = (): string => {
  return `temp_${Date.now()}_${Math.random().toString(36).substring(2, 8)}`;
};

/**
 * ÌååÏùº ÌÅ¨Í∏∞Î•º ÏùΩÍ∏∞ Ïâ¨Ïö¥ ÌòïÏãùÏúºÎ°ú Î≥ÄÌôò
 */
export const formatFileSize = (bytes: number): string => {
  const sizes = ['Bytes', 'KB', 'MB', 'GB'];
  if (bytes === 0) return '0 Bytes';
  
  const i = Math.floor(Math.log(bytes) / Math.log(1024));
  const size = (bytes / Math.pow(1024, i)).toFixed(1);
  
  return `${size} ${sizes[i]}`;
};

/**
 * ÌååÏùº ÌÉÄÏûÖÎ≥Ñ ÏïÑÏù¥ÏΩò Î∞òÌôò
 */
export const getFileTypeIcon = (sourceType: SourceType): string => {
  const icons: Record<SourceType, string> = {
    pdf: 'üìÑ',
    text: 'üìù',
    website: 'üåê',
    youtube: '‚ñ∂Ô∏è',
    audio: 'üéµ',
  };
  
  return icons[sourceType] || 'üìÑ';
};

/**
 * ÏóÖÎ°úÎìú ÏòàÏÉÅ ÏãúÍ∞Ñ Í≥ÑÏÇ∞
 */
export const estimateUploadTime = (fileSize: number, uploadSpeed?: number): number => {
  // Í∏∞Î≥∏ ÏóÖÎ°úÎìú ÏÜçÎèÑ: 1MB/s (ÏÇ¨Ïö©Ïûê ÌôòÍ≤ΩÏóê Îî∞Îùº Ï°∞Ï†ï)
  const avgUploadSpeed = uploadSpeed || 1024 * 1024; // bytes per second
  
  return Math.ceil(fileSize / avgUploadSpeed);
};
